<widget class="Window" name="OnX_HelpWindow_window">
  <geometry>700x400</geometry>
  <title>Help window</title>
  <show>no</show> 
  <decoration>no_close_button</decoration>
  <widget class="VBox"> 
    <expand>first</expand>
    <sizeOfFixed>30</sizeOfFixed>
    <widget class="ScrolledText" name="OnX_HelpWindow_text"/>
    <widget class="PushButton">
      <label>Cancel</label>
      <activate exec="DLD">OnX ui_hide @shell@this@</activate>
    </widget>
  </widget>
</widget>

